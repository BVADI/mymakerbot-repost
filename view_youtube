 {$vid = str_replace('yt:video:', '', $v.id)}
 
 {$url="https://www.googleapis.com/youtube/v3/videos?id={$vid}&key={$youtubekey}&part=snippet"}
 {api url=$url method='GET' format='json' assign='desc2'}

